<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <title>Search Notes</title>

    <!-- Google Fonts link for Roboto -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    
    <style>
        .light-blue {
            background-color: #e3f2fd; /* Light blue shade */
            border: 1px solid #90caf9; /* Matching border */
            border-radius: 7px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .light-blue:hover {
            transform: scale(1.05); /* Slightly enlarges the card */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Adds a shadow effect */
        }

        /* Apply the Roboto font */
        .font-roboto {
            font-family: 'Roboto', sans-serif;
        }
    </style>
</head>
<body class="p-3">
    <div>
        <h1 class="display-4">Search Notes</h1>
        <form action="/student/searchNotes" method="post">
            <div>
                <label class="form-label" for="">Subject: </label>
                <input class="form-control w-auto" type="text" name="title" placeholder="Enter subject name...." id=""> <br>
            </div>
            <input class="btn btn-primary" type="submit" value="Search">
        </form>
    </div>

    <br> <br>
    <h3 class="display-6">Search Results:</h3> <br> <br>
    <div class="container">
        <div class="row">
            <% notes.forEach((note) => { %>
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <div class="card-body light-blue">
                            <h5 class="card-title"><%= note.title %></h5>
                            <p class="card-text font-roboto"> <%= note.content %></p>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>
